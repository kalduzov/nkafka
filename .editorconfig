[*]
indent_style = space
max_line_length = 150

[*.cs]

# Microsoft .NET properties
csharp_new_line_before_open_brace = all
csharp_preferred_modifier_order = protected, private, volatile, internal, public, extern, new, static, override, sealed, virtual, abstract, unsafe, async, readonly, file, required:suggestion
csharp_prefer_braces = true:none
csharp_space_before_colon_in_inheritance_clause = false
dotnet_separate_import_directive_groups = true
csharp_space_after_cast = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_declaration_empty_parameter_list_parentheses = false
dotnet_style_require_accessibility_modifiers = always
dotnet_style_predefined_type_for_locals_parameters_members = true
dotnet_style_predefined_type_for_member_access = true
dotnet_sort_system_directives_first = true

# ReSharper properties
resharper_blank_lines_after_block_statements = 0
resharper_blank_lines_before_single_line_comment = 0
resharper_csharp_case_block_braces = next_line_shifted_2
resharper_csharp_max_line_length = 415
resharper_csharp_remove_blank_lines_near_braces_in_code = false
resharper_csharp_wrap_extends_list_style = chop_if_long
resharper_instance_members_qualify_declared_in =
resharper_keep_existing_attribute_arrangement = true
resharper_keep_existing_declaration_parens_arrangement = true
resharper_keep_existing_invocation_parens_arrangement = true
resharper_parentheses_redundancy_style = remove
resharper_place_field_attribute_on_same_line = if_owner_is_single_line
resharper_wrap_after_declaration_lpar = false
resharper_wrap_after_invocation_lpar = false
resharper_csharp_namespace_body = file_scoped

indent_size = 4
tab_width = 4
insert_final_newline = false
end_of_line = crlf

[*.{csproj, vbproj, vcxproj, vcxproj.filters, proj, projitems, shproj}]
indent_size = 2

[*.{props, targets, ruleset, config, nuspec, resx, vsixmanifest, vsct}]
indent_size = 2

[*.json]
indent_size = 2

[*.g.cs]
dotnet_analyzer_diagnostic.severity = none
generated_code = true
dotnet_diagnostic.CS0659.severity = suggestion
dotnet_diagnostic.CS8604.severity = suggestion
dotnet_diagnostic.CS8625.severity = suggestion
dotnet_diagnostic.CS8600.severity = suggestion
